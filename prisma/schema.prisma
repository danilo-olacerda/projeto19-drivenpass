datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model users {
  id          Int       @id @default(autoincrement())
  email       String
  password    String
  credentials credentials[]
  notes       notes[]
  @@unique([email])
}

model credentials {
  id       Int       @id @default(autoincrement())
  userId   Int
  user     users     @relation(fields: [userId], references: [id])
  url      String
  username String
  password String
  title    String @db.VarChar(50)
  @@unique([title, userId])
}

model notes {
  id       Int      @id @default(autoincrement())
  userId   Int
  user     users    @relation(fields: [userId], references: [id])
  title    String @db.VarChar(50)
  content  String @db.VarChar(100)
  @@unique([title, userId])
}

generator client {
  provider = "prisma-client-js"
}