datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model users {
  id          Int       @id @default(autoincrement())
  email       String
  password    String
  credentials credentials[]
  notes       notes[]
  cards      cards[]
  networks    networks[]
  @@unique([email])
}

model credentials {
  id       Int       @id @default(autoincrement())
  userId   Int
  user     users     @relation(fields: [userId], references: [id])
  url      String
  username String
  password String
  title    String @db.VarChar(50)
  @@unique([title, userId])
}

model notes {
  id       Int      @id @default(autoincrement())
  userId   Int
  user     users    @relation(fields: [userId], references: [id])
  title    String @db.VarChar(50)
  content  String @db.VarChar(100)
  @@unique([title, userId])
}

model cards {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       users    @relation(fields: [userId], references: [id])
  cardNumber String   @db.VarChar(16)
  cardHolder String
  expiryDate String   @db.VarChar(7)
  cvv        String
  isVirtual  Boolean
  password   String
  type       String   @db.VarChar(1)
  cardName   String
  @@unique([cardNumber, userId])
}

model networks {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        users    @relation(fields: [userId], references: [id])
  networkName String
  password    String
  name        String
}

generator client {
  provider = "prisma-client-js"
}